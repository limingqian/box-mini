<!--miniprogram/pages/cloud/cloud.wxml-->
<view>云数据库</view>
<button bindtap="insert">插入</button>
<button bindtap="update">修改</button>
<button bindtap="find">查询</button>
<button bindtap="delete">删除</button>
<view>云函数</view>
<button bindtap="sum">调用云函数</button>
<button bindtap="getOpenId">得到openid</button>
<button bindtap="batchDelete">批量删除</button>
<view>云存储</view>
<button bindtap="upload">上传图片</button>
<button bindtap="getFile">获取图片</button>
<block wx:for="{{images}}" wx:key="index">
	<image src="{{item.fileID}}"></image>
	<button size="mini" bindtap="download" data-id="{{item.fileID}}">下载</button>
</block>